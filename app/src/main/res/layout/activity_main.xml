<android.support.v4.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context="sokohuru.muchbeer.king.sokohuru.MainActivity">

        <include
            android:id="@+id/app_bar"
            layout="@layout/appbar" />

        <sokohuru.muchbeer.king.sokohuru.tabs.SlidingTabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tabs">


            </sokohuru.muchbeer.king.sokohuru.tabs.SlidingTabLayout>

<android.support.v4.view.ViewPager
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:id="@+id/pager"
    android:layout_weight="1"/>

    </LinearLayout>

    <fragment
        android:id="@+id/fragmentnavigationdrawer"
        android:name="sokohuru.muchbeer.king.sokohuru.NavDrawerFragment"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_nav_drawer"
        tools:layout="@layout/fragment_nav_drawer" />

</android.support.v4.widget.DrawerLayout>
